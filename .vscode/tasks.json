{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "args": [
        "run"
    ],
    "tasks": [
        {
            "taskName": "tsc:w",
            "isBuildCommand": true,
            "isWatching": true,
            "problemMatcher": "$tsc-watch",
            "showOutput": "always"
        },
        {
            "taskName": "test",
            "isTestCommand": true,
            "problemMatcher": "$eslint-stylish",
            "showOutput": "always"
        },
        {
            "taskName": "lint",
            "problemMatcher": "$eslint-compact",
            "showOutput": "always"
        }
    ]
}
